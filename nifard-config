# nifard-config

# Имя внешнего Интернет интерфейса
InternetInterface = enp5s0

# Имя внутреннего LAN интерфейса
LANInterface = enp3s0

# Имя пользователя базы данных
DatabaseUserName = postgres

# Пароль пользователя базы данных
DatabasePassword = 123456

# Имя домена Active Directory
DomainRealm = domain.local

# Имена контроллеров домена Active Directory
ADServer = dc1 dc2

# Имя пользователя Active Directory
ADUserName = nifard

# Пароль пользователя Active Directory
ADUserPassword = 123456

# Маска ip адресов которым предоставляется доступ в Интернет
ADUserIPMask = 192.168.

# Имя группы администраторов домена
ADGroupAdmins = Admins

# Имя группы Active Directory для доступа в Интернет (маска)
ADGroupInternetMask = internet_

# Путь до log файла
LogFile = /var/log/nifard/nifard-server.log
