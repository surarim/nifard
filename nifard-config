# nifard config

# Имя внешнего Интернет интерфейса
InternetInterface = enp5s0

# Имя пользователя базы данных
DatabaseUserName = "postgres"

# Пароль пользователя базы данных
DatabasePassword = 123456

# Имя домена Active Directory
ADRealm = domain.local

# Имя контроллера домена Active Directory
ADServer = dc.domain.local

# Имя пользователя Active Directory
ADUserName = "nifard"

# Пароль пользователя Active Directory
ADUserPassword = 123456

# Имя группы Active Directory для доступа в Интернет
ADInternetGroup = internet_nolimit

# Путь до log файла
LogFile = /var/log/nifard/nifard-server.log
